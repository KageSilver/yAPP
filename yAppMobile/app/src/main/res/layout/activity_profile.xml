<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/profile_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#48C51162"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profile_button_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/profile_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A" />
                <Button
                    android:id="@+id/profile_requests_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A" />
                <Button
                    android:id="@+id/profile_options_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A"
                    android:textColorLink="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_info_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_yapp_icon"
                    android:layout_width="141dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="16dp"
                    app:srcCompat="@drawable/yapp_icon_light" />
                <TextView
                    android:id="@+id/profile_username_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="Username"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/profile_bio_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="50dp"
                    android:text="Insert very nice bio here"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/profile_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/profile_my_posts_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Posts" />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/profile_my_friends_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Friends" />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/profile_my_achievements_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Achievements" />
        </com.google.android.material.tabs.TabLayout>

        <ListView
            android:id="@+id/profile_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fab_margin" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



