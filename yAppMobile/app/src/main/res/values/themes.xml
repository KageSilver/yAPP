<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YAppMobile" parent="Theme.Material3.DayNight">
        <!-- Make the app full screen and android navbar translucent -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Theme.YAppMobile" parent="Base.Theme.YAppMobile" />
    <!-- style for calendar text colour -->
    <style name="CalenderViewCustom" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>