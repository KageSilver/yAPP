{
	"compilerOptions": {
		"types": [],
		"allowJs": true,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"noImplicitAny": true,
		"sourceMap": false,
		"paths": {
			"/*": ["./*"],
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"src/*/.ts",
		"src/*/.d.ts",
		"src/*/.tsx",
		"src/*/.vue",
		"src/locales/en.yml"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
